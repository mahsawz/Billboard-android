<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FillSurveyActivity"
    tools:showIn="@layout/question_bar">

    <TextView
        android:id="@+id/survey_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:gravity="center"
        android:fontFamily="@font/fa_bold"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/questionsRecycler"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical">
    <Button
        android:id="@+id/submit_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fa_light"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dlbutton_background"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:text="@string/submit_survey"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>