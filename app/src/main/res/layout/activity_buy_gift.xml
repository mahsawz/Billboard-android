<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:orientation="vertical"
    tools:context=".BuyGiftActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/fa_light"
        android:text="@string/buy_gift_successful"
        android:textColor="@android:color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:fontFamily="@font/fa_light"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/fa_light"
            android:text="کد گیفت خریداری شده:"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/giftCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/fa_light"
            android:layoutDirection="rtl"
            android:text="کد گیفت:"
            android:textColor="@color/colorWhite"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/backToGiftShop"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/dlbutton_background"
        android:text="بازگشت به گیف شاپ"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:textStyle="bold" />

</LinearLayout>